{
    "compilerOptions": {
        "target": "ESNext",
        "module": "umd",
        "lib": [
            "ES2015",
            "ES2016",
            "ES2017",
            "ES2018",
            "ES2019",
            "ES2020",
            "ESNext",
            "dom"
        ],
        "jsx": "react",
        "noEmit": true,
        "sourceMap": true,
        /* Strict Type-Checking Options */
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        /* Module Resolution Options */
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "baseUrl": "./",
        "paths": {
            "Constants/*": [
                "app/src/constants/*"
            ],
            "Components/*": [
                "app/src/components/*"
            ],
            "Core/*": [
                "app/src/core/*"
            ],
            "Images/*": [
                "resources/images/*"
            ]
        },
        "types": [
            "node"
        ]
    },
    "include": [
        "app/src",
        "app/electron"
    ],
}