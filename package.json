{
  "name": "secure-electron-minimal-react",
  "version": "0.1.0",
  "description": "Secure Electron minimal template with React",
  "private": true,
  "main": "app/electron/main.js",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "audit-app": "npx electronegativity -i ./ -x LimitNavigationGlobalCheck,PermissionRequestHandlerGlobalCheck",
    "translate": "node ./app/localization/translateMissing.js",
    "dev-server": "cross-env NODE_ENV=development webpack serve --config ./webpack.development.js > dev-scripts/webpack-dev-server.log 2> dev-scripts/webpack-dev-server-error.log",
    "dev": "concurrently --success first \"node dev-scripts/prepareDevServer.js\" \"node dev-scripts/launchDevServer.js\" -k",
    "prod-build": "cross-env NODE_ENV=production npx webpack --mode=production --config ./webpack.production.js",
    "prod": "npm run prod-build && electron .",
    "pack": "electron-builder --dir",
    "dist": "npm run test && npm run prod-build && electron-builder",
    "dist-mac": "npm run test && npm run prod-build && electron-builder --mac",
    "dist-linux": "npm run test && npm run prod-build && electron-builder --linux",
    "dist-windows": "npm run prod-build && electron-builder --windows",
    "dist-all": "npm run test && npm run prod-build && electron-builder --mac --linux --windows",
    "test": "mocha"
  },
  "build": {
    "productName": "YourProductName",
    "appId": "com.yourcompany|electron.yourproductname",
    "directories": {
      "buildResources": "resources"
    },
    "files": [
      "app/dist/**/*",
      "app/electron/**/*",
      "LICENSE"
    ],
    "win": {
      "target": [
        "nsis",
        "msi"
      ]
    },
    "linux": {
      "target": [
        "deb",
        "rpm",
        "snap",
        "AppImage"
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/timlindnet/secure-electron-minimal-react.git"
  },
  "keywords": [
    "electron",
    "security",
    "secure",
    "template",
    "javascript",
    "react",
    "webpack",
    "boilerplate"
  ],
  "author": "timlindnet",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/timlindnet/secure-electron-minimal-react/issues"
  },
  "homepage": "https://github.com/timlindnet/secure-electron-minimal-react#readme",
  "browserslist": [
    "last 2 Chrome versions"
  ],
  "devDependencies": {
    "@babel/core": "^7.20.2",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-react-jsx": "^7.19.0",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-react": "^7.18.6",
    "@babel/preset-typescript": "^7.18.6",
    "@doyensec/electronegativity": "^1.9.1",
    "@types/node": "^18.11.9",
    "@types/react": "^18.0.25",
    "@types/react-dom": "^18.0.9",
    "@types/webpack-env": "^1.18.0",
    "babel-loader": "^9.1.0",
    "babel-plugin-module-resolver": "^4.1.0",
    "buffer": "^6.0.3",
    "clean-webpack-plugin": "^4.0.0",
    "concurrently": "^7.6.0",
    "cross-env": "^7.0.3",
    "crypto-browserify": "^3.12.0",
    "csp-html-webpack-plugin": "^5.1.0",
    "css-loader": "^6.7.2",
    "css-minimizer-webpack-plugin": "^4.2.2",
    "electron": "^21.3.0",
    "electron-builder": "^23.6.0",
    "electron-debug": "^3.2.0",
    "html-loader": "^4.2.0",
    "html-webpack-plugin": "^5.5.0",
    "mini-css-extract-plugin": "^2.7.0",
    "mocha": "^10.1.0",
    "path-browserify": "^1.0.1",
    "spectron": "^19.0.0",
    "stream-browserify": "^3.0.0",
    "typescript": "4.9.3",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.0",
    "webpack-dev-server": "^4.11.1",
    "webpack-merge": "^5.8.0"
  },
  "dependencies": {
    "@loadable/component": "^5.15.2",
    "electron-devtools-installer": "^3.2.0",
    "lodash": "4.17.21",
    "lodash.merge": "^4.6.2",
    "process": "^0.11.10",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router": "^6.4.3",
    "react-router-dom": "^6.4.3"
  }
}
